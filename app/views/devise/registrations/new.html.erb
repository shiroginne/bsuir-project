<h2>Регистрация</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <% %w[last_name first_name middle_name].each do |attr| %>
      <%= f.input attr, :required => true %>
    <% end %>

    <%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :password, :required => true, :label => "Пароль" %>
    <%= f.input :password_confirmation, :required => true, :label => "Подтверждение пароля" %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Зарегистрироваться" %>
  </div>
<% end %>

<%= render :partial => "devise/shared/links" %>
